@model AuthIdentityServer.Models.AccountViewModels.LoginViewModel
@{
Layout = "~/VIews/Shared/_Layout.cshtml";
}
@section css {
<link rel="stylesheet" href="~/css/formcommon.css" type="text/css"/>
<link rel="stylesheet" href="~/css/login.css" type="text/css"/>
<link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css"/>
<link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css"/>
}

@section js {
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script>
   $(document).ready(function(){
   $(".loader").hide();
   $('.loginForm').submit(function () {
      $(".alertmessage").hide();
      if($(this).valid()){
         $( "#bg" ).addClass( "in" );
         $(".loader").show();
      } 
      else{
         //$( "#bg" ).removeClass( "in" );
         $(".loader").hide();
      }
     });
   })
   
</script>
}
@if (@Model.ThemeId ==1)
{
<link rel="stylesheet" href="~/css/logincolor1.css" type="text/css"/>
}else if(@Model.ThemeId ==2)
{
<link rel="stylesheet" href="~/css/logincolor2.css" type="text/css"/>
}else if(@Model.ThemeId ==3)
{
<link rel="stylesheet" href="~/css/logincolor3.css" type="text/css"/>
}else if(@Model.ThemeId ==4)
{
<link rel="stylesheet" href="~/css/logincolor4.css" type="text/css"/>
}
<div class="d-flex flex-column flex-root">
   <div class="login login-2 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
      <div id="bg" class="order-2 d-flex flex-column-fluid flex-lg-row-auto bgi-size-cover bgi-no-repeat p-7 p-lg-10 position-relative bg ">
         <div class="d-flex flex-row-fluid flex-column justify-content-between">
            <div class="d-flex flex-column-fluid flex-column flex-center mt-5 mt-lg-0">
               <div class="login-form login-signin ">
                  <div style="margin-bottom: 30px;">
                     <h2 class="font-weight-bold text-center">LOGIN FORM </h2>
                     <h4 class="text-muted font-weight-bold text-center">Login to access your dashboard</h4>
                  </div>
                  <form class="form fv-plugins-bootstrap fv-plugins-framework loginForm" asp-controller="auth" asp-action="Login" name="username" method="post">
                     <input type="hidden" asp-for="ReturnUrl" />
                     <div class="form-group py-3 m-0 fv-plugins-icon-container">
                        <input type="text" class="form-control h-auto border-0 px-0 placeholder-dark-75" name="Email" placeholder="Email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                     </div>
                     <div class="form-group py-3 border-top m-0 fv-plugins-icon-container border-bottom">
                        <input type="password" class="form-control h-auto border-0 px-0 placeholder-dark-75" placeholder="Password" name="Password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                     </div>
                     <div class="form-group d-flex flex-wrap justify-content-between align-items-center mt-3">
                        <div class="checkbox-inline">
                           <label asp-for="RememberMe" class="checkbox checkbox-outline m-0 text-muted">
                           <input asp-for="RememberMe" name="remember" />
                           <span></span>
                           @Html.DisplayNameFor(m => m.RememberMe)
                           </label>
                        </div>
                        <a href="forgotpassword" id="kt_login_forgot" class="text-muted text-hover-primary">Forgot Password ?</a>
                     </div>
                     
                     <div></div>
                     <div class="form-group d-flex flex-wrap justify-content-end">
                        <button type="submit" class="btn btn-primary font-weight-bold sbtbtn">Submit</button>
                        @if(!string.IsNullOrEmpty(Model.Message))
                        {
                        <div class="alert alert-danger alertmessage" role="alert" style="width:100%;text-align:center;">
                           @Model.Message
                        </div>
                        }
                        @* <a class="btn btn-primary font-weight-bold px-9 py-4 my-3" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl"></a> *@
                     </div>
                  </form>

               </div>
               <div class="create-account">
                  <span>Not signed up? Learn more about becoming a BloomRunner!</span>
                  <a href="#" class="dashboard-create-account-btn">Learn more</a>
               </div>
            </div>
            <div class="d-flex flex-column-auto justify-content-center mt-15">
               <div class="d-flex order-2 order-sm-1 my-2 text-center">
                  <div class="copyright">
                     <ul>
                        <li>&copy; 2020 BloomRunner</li>
                        <li> &bull; Discount Flower Delivery </li>
                        <li> &bull; &copy; 2020 BloomRunner, LLC</li>
                        <li> &bull; Los Angeles, California</li>
                        <li> &bull; Local Florist's Marketplace ®</li>
                        <br>
                        <li><a href="#" title=""> Send Flowers Online</a></li>
                        <li>&bull; <a href="#" title=""> Terms of Use</a></li>
                        <li> &bull; <a href="#" title=""> Privacy and Security</a></li>
                        <li> &bull; <a href="#" title=""> Send us Feedback on this Site</a></li>
                     </ul>
                  </div>
               </div>
            </div>
         </div>
            <div class="loader">
               <i class="fa fa-spinner" aria-hidden="true"></i>
					@* <img src="~/images/Rolling.gif" width="50" alt="image"> *@
				  </div>
      </div>
      <!--begin::Content-->
      <div class="login-aside order-1 flex-column-auto flex-lg-row-fluid d-flex flex-column p-7">
         <div class="d-flex flex-row-fluid flex-column justify-content-between login-inner">
            <a class="flex-column-auto bgColor" href="#"><img class="width-320" src="~/images/logo.png"></a>
            <div class="flex-column-fluid d-flex flex-column justify-content-center">
               <h3 class="font-size-h1 mb-5">Welcome to Rainbow Florist</h3>
            </div>
         </div>
      </div>
      <!--end::Content-->
   </div>
</div>