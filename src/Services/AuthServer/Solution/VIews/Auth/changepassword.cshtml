@model AuthIdentityServer.Models.AccountViewModels.ChangePasswordViewModel

@{
   Layout = "~/VIews/Shared/_Layout.cshtml";
}

@section css {
   <link rel="stylesheet" href="~/css/formcommon.css" type="text/css"/>
   <link rel="stylesheet" href="~/css/login.css" type="text/css"/>
   <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css"/>
   <link rel="stylesheet" href="~/css/Loader.css" type="text/css"/>
}

   @section js {
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
   <script src="~/js/ChangePassword.js"></script>
}

<div class="d-flex flex-column flex-root">
   <div class="login login-2 login-signin-on d-flex flex-column flex-lg-row flex-column-fluid bg-white" id="kt_login">
      <div id="bg" class="order-2 d-flex flex-column-fluid flex-lg-row-auto bgi-size-cover bgi-no-repeat p-7 p-lg-10 position-relative bg ">
         <div class="d-flex flex-row-fluid flex-column justify-content-between">
            <div class="d-flex flex-column-fluid flex-column flex-center mt-5 mt-lg-0">
               <div class="login-form login-forgot">
                  <div class="text-center mb-10 mb-lg-20">
                     <h2 class="">Change Password ?</h2>
                     <h4 class="text-muted font-weight-bold">Enter your email to Change your password</h4>
                  </div>
                  <form class="form fv-plugins-bootstrap fv-plugins-framework changePasswordForm" novalidate="novalidate" asp-controller="ChangePassword" asp-action="ChangePassword" method="post" id="kt_login_Change_form">
                    <div class="form-group py-3 border-top m-0 fv-plugins-icon-container border-bottom">
                        <input type="password" class="form-control h-auto border-0 px-0 placeholder-dark-75" placeholder="OldPassword" name="OldPassword" asp-for="OldPassword" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                        
                     </div>

                     <div class="form-group py-3 border-top m-0 fv-plugins-icon-container border-bottom">
                        <input type="password" class="form-control h-auto border-0 px-0 placeholder-dark-75" placeholder="NewPassword" name="NewPassword" asp-for="NewPassword" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                     </div>

                     <div class="form-group py-3 border-top m-0 fv-plugins-icon-container border-bottom">
                        <input type="password" class="form-control h-auto border-0 px-0 placeholder-dark-75" placeholder="ConfirmPassword" name="ConfirmPassword" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                     </div>

                     <div class="form-group py-3 border-top m-0 fv-plugins-icon-container border-bottom">
                        <input type="text" class="form-control h-auto border-0 px-0 placeholder-dark-75" placeholder="Email" name="Email" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                     </div>
                     <div class="form-group d-flex flex-wrap flex-center">
                        <input type="submit" id="kt_login_change_submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2" value="Submit">
                        <a href="http://ditstekdemo.com/floristappdev/login" id="kt_login_forgot_cancel"
                        class="btn btn-outline-primary font-weight-bold px-9 py-4 my-3 mx-2">Cancel</a>
                     </div>
                     <div></div>
                  </form>
               </div>
               <div class="create-account">
                  <span>Not signed up? Learn more about becoming a BloomRunner!</span>
                  <a href="#" class="dashboard-create-account-btn">Learn more</a>
               </div>
            </div>
            <div class="d-flex flex-column-auto justify-content-center mt-15">
               <div class="order-2 order-sm-1 my-2 text-center">
                  <div class="copyright">
                     <ul>
                        <li>&copy; 2020 BloomRunner</li>
                        <li> &bull; Discount Flower Delivery </li>
                        <li> &bull; &copy; 2020 BloomRunner, LLC</li>
                        <li> &bull; Los Angeles, California</li>
                        <li> &bull; Local Florist's Marketplace ®</li><br>
                        <li><a href="#" title=""> Send Flowers Online</a></li>
                        <li>&bull; <a href="#" title=""> Terms of Use</a></li>
                        <li> &bull; <a href="#" title=""> Privacy and Security</a></li>
                        <li> &bull; <a href="#" title=""> Send us Feedback on this Site</a></li>
                     </ul>
                  </div>
               </div>
            </div>
         </div>
         <div class="loader">
               <i class="fa fa-spinner" aria-hidden="true"></i>				
				  </div>
      </div>
      <div class="login-aside order-1 flex-column-auto flex-lg-row-fluid d-flex flex-column p-7">
         <div class="d-flex flex-row-fluid flex-column justify-content-between login-inner">
            <a class="flex-column-auto bgColor" href="#"><img class="width-320" src="~/images/logo.png"></a>
            <div class="flex-column-fluid d-flex flex-column justify-content-center">
                 <h3 class="font-size-h1 mb-5">Welcome to Rainbow Florist</h3>
            </div>
         </div>
      </div>
   </div>
</div>


<div class="overlay">
    <div class="overlay__inner">
        <div class="overlay__content"><span class="spinner"></span></div>
    </div>
</div>