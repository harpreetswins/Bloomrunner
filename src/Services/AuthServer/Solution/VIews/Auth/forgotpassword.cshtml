   <script>
   $(document).ready(function(){
   $(".loader").hide();
   $('.forgotpasswordForm').submit(function () {
      $(".alertmessage").hide();
      if($(this).valid()){
         $( "#bg" ).addClass( "in" );
         $(".loader").show();
      } 
      else{
         //$( "#bg" ).removeClass( "in" );
         $(".loader").hide();
      }
     });
   })
   
</script>
}


   @if (@Model.ThemeId ==1)
   {  
     <link rel="stylesheet" href="~/css/logincolor1.css" type="text/css"/>
   }else if(@Model.ThemeId ==2)
